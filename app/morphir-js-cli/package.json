{
  "name": "@finos/morphir-js-cli",
  "type": "module",
  "types": "build/types/types.d.ts",
  "bin": {
    "morphir": "bin/morphir"
  },
  "scripts": {
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "vite:build": "vite build",
    "build": "bun clean-build && bun compile && bun copy-templates",
    "prepublishOnly": "bun run build",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "test": "bunx jest",
    "watch": "bunx jest --watch",
    "snapupdate": "bunx jest --updateSnapshot",
    "coverage": "bunx jest --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "dependencies": {
    "@finos/mock-morphir-elm": "workspace:*",
    "gluegun": "^5.1.6",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "copyfiles": "^2.4.1",
    "elm": "^0.19.1-6",
    "elm-test-rs": "^3.0.0-5",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-elm": "^3.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}